# Bot Configuration
BOT_TOKEN=your_telegram_bot_token
WEBHOOK_URL=
WEBHOOK_PATH=/webhook
USE_WEBHOOK=false

# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost/diana_bot
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_ECHO=false

# Admin Configuration
ADMIN_USER_IDS=123456789,987654321

# Channel Configuration
VIP_CHANNEL_ID=-1001234567890
FREE_CHANNEL_ID=-1009876543210

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_BACKGROUND_TASKS=true
ENABLE_EMOTIONAL_SYSTEM=true

# Task Scheduler
TASK_SCHEDULER_TIMEZONE=UTC

# Logging
LOG_LEVEL=INFO
LOG_FILE=diana_bot.log

# Security
API_ID=your_api_id
API_HASH=your_api_hash